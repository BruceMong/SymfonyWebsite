                                            <a href="{{path('modify_data', {'id' : dataAll[16].id } ) }}" class="button primary modifyData" >Changer texte</a>
                                        </section>
                                    </div>
                                    <div class="col-6 col-12-small formFooter">
                                        <section>
                                            <a href="{{path('modify_data', {'id' : dataAll[17].id } ) }}" class="button primary modifyData" >Changer texte</a>
                                        </section>
                                    </div>
                                    <div class="col-6 col-12-small formFooter">
